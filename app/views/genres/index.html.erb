<% content_for :header do %>
  <h1>Video Game Genres</h1>
<% end %>

<% content_for :vertical_nav do %>
  <ul class="nav flex-column">
    <li class="nav-item mb-3">
      <%= button_to "Back to Favorite Video Games", video_games_path, :method => "get", class: "btn btn-info btn-block" %>
    </li>
  </ul>
<% end %>

<% content_for :content do %>
  <p>Click on a genre below to see all video games in that genre</p>
  <% alphabetize(@genres).each do |genre| %>
    <p><%= link_to genre.name, genre_path(genre) %></p>
  <% end %>
<% end %>
